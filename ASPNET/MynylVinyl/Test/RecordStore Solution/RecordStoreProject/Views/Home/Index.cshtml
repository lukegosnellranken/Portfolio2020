@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1 id="homeHeader">Mynyl Vinyl</h1>
    <p class="lead">The best music shop in Wentzville, MO!</p>
    @*<p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>*@

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Images/image1.jpg" alt="Vinyl shop">
            </div>

            <div class="item">
                <img src="~/Images/image2.jpg" alt="Turntable">
            </div>

            <div class="item">
                <img src="~/Images/image3.jpg" alt="Vinyl player">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</div>

<div class="row">
    <div class="col-md-4">
        <h2>#1 Vinyl Shop</h2>
        <p class="homeDescription">Mynyl Vinyl has been voted #1 Vinyl Shop in Wentzville by our customers.</p>
        @*<p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301865">Learn more &raquo;</a></p>*@
    </div>
    <div class="col-md-4">
        <h2>Every Genre</h2>
        <p class="homeDescription">From rock 'n' roll to free-form jazz, we carry it all!</p>
        @*<p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301866">Learn more &raquo;</a></p>*@
    </div>
    <div class="col-md-4">
        <h2>Live Performances</h2>
        <p class="homeDescription">Support local artists by seeing them perform live every Friday night! Come in to the store to see our schedule!</p>
        @*<p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301867">Learn more &raquo;</a></p>*@
    </div>
</div>

<br />
<br />
<br />

